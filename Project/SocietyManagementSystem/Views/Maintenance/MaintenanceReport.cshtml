@model SocietyManagementSystem.Models.Maintenance

@{
    ViewData["Title"] = "MaintenanceReport";
}
<head>
    <script src="~/js/jquery-3.5.1.min.js"></script>
</head>

<style>

    .bg-image {
        position: absolute;
        width: 35%;
        height: 50%;
        margin-right: 30px;
        margin-left: 600px;
        margin-top: 10px;
    }

    .bg-image1 {
        width: 100%;
        height: 100%;
        position: fixed;
        right: 0;
        left: 0;
        top: 0;
        bottom: 0;
    }

    .reg_label {
        position: absolute;
        top: 40px;
        bottom: 0;
        margin-left: 30px;
        margin-right: 0;
        color: snow;
    }

    div {
        width: 200%;
    }

    input[type=text], input[type=password], input[type=email], input[type=number], input[type=date] {
        border-radius: 25px;
    }

    label {
        color: snow;
        font-size: 18px;
        font-weight: 500;
    }

    h1 {
        text-shadow: 2px 2px 5px;
    }

    a {
        color: snow;
        margin-top: 400px;
        margin-left: 20px;
        position: absolute;
    }

    form {
        position: absolute;
        margin-top: 90px;
        margin-bottom: 0;
    }
</style>
<body>
    <img src="~/images/loginhd.jpg" class="bg-image1" />
    <h1 class="reg_label">Maintenance Report</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="MaintenanceReportData">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label class="control-label"> Filter By</label>
                    <select id="filter" name="filter">
                        <option value="-1">Select Filter</option>
                        <option value="0"> Payment Status </option>
                        <option value="1"> Date wise </option>
                    </select>

                </div>

                <script>
                    $(document).ready(function () {
                        $('#status').hide();
                        $('#Date').hide();
                        $('#filter_label').hide();
                        $('#filter').change(function () {
                            var val = document.getElementById('filter').value;
                            console.log(val);
                            if (val == 0) {
                                $('#filter_label').show();
                                $('#status').show();
                                $('#Date').hide();
                            }
                            else if (val == 1) {
                                $('#filter_label').hide();
                                $('#status').hide();
                                $('#Date').show();
                            }
                            else {
                                $('#status').hide();

                            }
                        });
                    });
                </script>

                <div class="form-group">
                    <label class="control-label" id="filter_label"> Payment Status</label>
                    <select id="status" name="status">
                        <option value="">Select Status</option>
                        <option value="0"> Paid </option>
                        <option value="1"> Unpaid </option>
                    </select>
                </div>
                <div class="form-group" id="Date">
                    <label class="control-label" id="start_date_label"> To </label>
                    <input type="date" name="start_date" class="form-control" />
                    <label class="control-label" id="end_date_label"> From </label>
                    <input type="date" name="end_date" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Generate" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="MaintenanceMember">Back to List</a>
    </div>
</body>
