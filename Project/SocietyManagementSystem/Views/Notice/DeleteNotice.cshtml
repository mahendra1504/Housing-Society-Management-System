@model SocietyManagementSystem.Models.Notice

@{
    ViewData["Title"] = "DeleteNotice";
}
<style>

    .bg-image {
        position: absolute;
        width: 35%;
        height: 50%;
        margin-right: 30px;
        margin-left: 600px;
        margin-top: 10px;
    }

    .bg-image1 {
        width: 100%;
        height: 100%;
        position: fixed;
        right: 0;
        left: 0;
        top: 0;
        bottom: 0;
    }

    .reg_label {
        position: absolute;
        top: 60px;
        bottom: 0;
        margin-left: 20px;
        margin-right: 0;
        color: snow;
    }

    div {
        width: 200%;
    }

    input[type=text], input[type=password], input[type=email], input[type=number], input[type=date] {
        border-radius: 25px;
    }

    label {
        color: snow;
        font-size: 18px;
        font-weight: 500;
    }

    h1 {
        text-shadow: 2px 2px 5px;
    }
    h3{
       position:absolute;
       margin-top:10px;
        margin-top:0;
        color:snow;
    }

    a {
        margin-left:120px;
        position:absolute;
        color: snow;
    }

    dt {
        color: snow;
    }

    dd {
        color: snow;
    }
    dl{
        margin-top:170px;
    }
    form{
        margin-left:30px;
        position:absolute;
    }
</style>
<body>
    <img src="~/images/loginhd.jpg" class="bg-image1" />
    <h1 class="reg_label">Delete Notice</h1>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.notice_subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.notice_subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.notice_detail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.notice_detail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.notice_date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.notice_date)
        </dd>
    </dl>

    <form asp-controller="Notice" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
    </form>
    <a asp-action="ManageNotice">Back to List</a>

</body>