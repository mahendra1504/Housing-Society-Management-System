@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocietyManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SocietyManagementSystem</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h5>Home</h5></a>
                        </li>

                        @if (!signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="RegistrationLogin" asp-action="SignUp">Registration</a>
                            </li>
                            <li class="nav-item">
                                <a class="navbar-brand" asp-area="" asp-controller="RegistrationLogin" asp-action="SignIn">Login</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Owner"))
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Complaint" asp-action="GiveComplaint"><h5>Complaint</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Feedback" asp-action="GiveFeedback"><h5>Feedback</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Event" asp-action="ViewEvents"><h5>Events</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Complaint" asp-action="MyComplaint"><h5>My Complaints</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Notice" asp-action="ViewNotice"><h5>Notice</h5></a>
                                </li>


                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Maintenance" asp-action="PayMaintenance"><h5>Pay Maintenance</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Charges" asp-action="ShowCharges"><h5>Pay Extracharges</h5></a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="RegistrationLogin" asp-action="Logout"><h5>Logout</h5></a>
                                </li>
                            }
                            else if (User.IsInRole("Renter"))
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Notice" asp-action="ViewNotice">Notice</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Event" asp-action="ViewEvents">Events</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Charges" asp-action="ShowCharges">Extra Charges</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="RegistrationLogin" asp-action="Logout">Logout</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Notice" asp-action="ManageNotice">Manage Notice</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Event" asp-action="ManageEvent">Manage Event</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Charges" asp-action="ManageCharges">Manage Charges</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Charges" asp-action="AddExtraCharge">Extra Charges</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Maintenance" asp-action="MaintenanceMember">Maintenance</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Complaint" asp-action="AllComplaints">Complaints</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Members" asp-action="ViewMembers">Members</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Feedback" asp-action="ViewFeedback">Feedbacks</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Maintenance" asp-action="TransactionReport">Transaction Report</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="RegistrationLogin" asp-action="Logout">Logout</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    
</body>
</html>
