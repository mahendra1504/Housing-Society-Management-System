@model SocietyManagementSystem.Models.Complaint

@{
    ViewData["Title"] = "EditComplaint";
}

<style>

    .bg-image {
        position: absolute;
        width: 35%;
        height: 50%;
        margin-right: 30px;
        margin-left: 600px;
        margin-top: 10px;
    }

    .bg-image1 {
        width: 100%;
        height: 100%;
        position: fixed;
        right: 0;
        left: 0;
        top: 0;
        bottom: 0;
    }

    .reg_label {
        position: absolute;
        top: 30px;
        bottom: 0;
        margin-left: 30px;
        margin-right: 0;
        color: snow;
    }

    div {
        width: 200%;
    }

    a {
        position: absolute;
        margin-top: 780px;
        margin-left: 70px;
        color: snow;
    }

    input[type=text], input[type=password], input[type=email], input[type=number], input[type=date] {
        border-radius: 25px;
    }

    label {
        color: snow;
        font-size: 18px;
        font-weight: 500;
    }

    h1 {
        text-shadow: 2px 2px 5px;
    }

    form {
        position: absolute;
        margin-top: 60px;
        margin-bottom: 0;
    }
</style>
<body>
    <img src="~/images/loginhd.jpg" class="bg-image1" />
    <h1 class="reg_label">Edit Complaint</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditComplaint">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="complaint_subject" class="control-label"></label>
                    <input asp-for="complaint_subject" class="form-control" />
                    <span asp-validation-for="complaint_subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="complaint_detail" class="control-label"></label>
                    <textarea asp-for="complaint_detail" class="form-control" rows="5" cols="5"></textarea>
                    <span asp-validation-for="complaint_detail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Member_mail" class="control-label"></label>
                    <input asp-for="Member_mail" class="form-control" readonly />
                    <span asp-validation-for="Member_mail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="house_no" class="control-label"></label>
                    <input asp-for="house_no" class="form-control" readonly />
                    <span asp-validation-for="house_no" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="complaint_date" class="control-label"></label>
                    <input asp-for="complaint_date" class="form-control" readonly />
                    <span asp-validation-for="complaint_date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="complaint_status" class="control-label"></label>
                    <input asp-for="complaint_status" class="form-control" readonly />
                    <span asp-validation-for="complaint_status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="solution" class="control-label"></label>
                    <input asp-for="solution" class="form-control" readonly />
                    <span asp-validation-for="solution" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="MyComplaint">Back to List</a>
    </div>
</body>
