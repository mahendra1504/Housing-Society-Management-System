@model SocietyManagementSystem.Models.ExtraCharges

@{
    ViewData["Title"] = "ChargeDetails";
}
<style>

    .bg-image {
        position: absolute;
        width: 35%;
        height: 50%;
        margin-right: 30px;
        margin-left: 600px;
        margin-top: 10px;
    }

    .bg-image1 {
        width: 100%;
        height: 100%;
        position: fixed;
        right: 0;
        left: 0;
        top: 0;
        bottom: 0;
    }

    .reg_label {
        position: absolute;
        top: 60px;
        bottom: 0;
        margin-left: 20px;
        margin-right: 0;
        color: snow;
    }

    div {
        width: 200%;
    }

    input[type=text], input[type=password], input[type=email], input[type=number], input[type=date] {
        border-radius: 25px;
    }

    label {
        color: snow;
        font-size: 18px;
        font-weight: 500;
    }

    h1 {
        text-shadow: 2px 2px 5px;
    }

    a {
        position:absolute;
        color: snow;
    }
    .a1 {
        position: absolute;
        color: snow;
        margin-left:70px;
    }

    dt {
        color: snow;
    }

    dd {
        color: snow;
    }
    dl{
        margin-top:120px;
    }
</style>
<body>
    <img src="~/images/loginhd.jpg" class="bg-image1"/>
    <h1 class="reg_label">Charge Details</h1>

    <div>
        
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.house_no)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.house_no)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.charge_type)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.charge_type)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Charge_date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Charge_date)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="CreateOrder" asp-route-id="@Model.Id">Pay Now</a> |
        <a  class="a1"  asp-action="ShowCharges">Back to List</a>
    </div>
</body>