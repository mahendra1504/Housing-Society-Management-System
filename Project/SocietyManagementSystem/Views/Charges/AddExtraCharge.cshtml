@model SocietyManagementSystem.Models.ExtraCharges

@{
    ViewData["Title"] = "AddExtraCharge";
}

<style>

    .bg-image {
        position: absolute;
        width: 35%;
        height: 50%;
        margin-right: 30px;
        margin-left: 600px;
        margin-top: 10px;
    }

    .bg-image1 {
        width: 100%;
        height: 100%;
        position: fixed;
        right: 0;
        left: 0;
        top: 0;
        bottom: 0;
    }

    .reg_label {
        position: absolute;
        top: 40px;
        bottom: 0;
        margin-left: 30px;
        margin-right: 0;
        color: snow;
    }

    div {
        width: 200%;
    }

    input[type=text], input[type=password], input[type=email], input[type=number], input[type=date] {
        border-radius: 25px;
    }

    label {
        color: snow;
        font-size: 18px;
        font-weight: 500;
    }

    h1 {
        text-shadow: 2px 2px 5px;
    }

    a {
        position: absolute;
        color: snow;
        margin-top: 320px;
        margin-left: 100px;
    }

    form {
        position: absolute;
        margin-top: 90px;
        margin-bottom: 0;
    }
</style>
<body>
    <img src="~/images/loginhd.jpg" class="bg-image1" />
    <h1 class="reg_label">New Extra Charge</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddExtraCharge">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="house_no" class="control-label"> House no</label>
                    <select asp-for="house_no"   asp-items="@ViewBag.house_no">
                    </select>
                    <span asp-validation-for="house_no" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="charge_type" class="control-label">Charge Type</label>
                    <input asp-for="charge_type" class="form-control" required />
                    <span asp-validation-for="charge_type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"> Charge Amount</label>
                    <input asp-for="Amount" class="form-control" required/>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
            <a asp-controller="Home" asp-action="Index">Back To Home</a>
        </div>
    </div>

    <div>

    </div>
</body>
